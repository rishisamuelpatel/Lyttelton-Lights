  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Global"
      },
      {
        "type":      "range",
        "id":        "font_size_base",
        "min":       15,
        "max":       18,
        "step":      1,
        "unit":      "px",
        "label":     "Base font size",
        "default":   16
      },
      {
        "type": "header",
        "content": "Body font"
      },
      {
        "type": "font_picker",
        "label": "Font",
        "id": "font_body",
        "default": "avenir_next_n4"
      },
      {
        "type": "header",
        "content": "Main menu"
      },
      {
        "type": "font_picker",
        "label": "Font",
        "id": "font_menu",
        "default": "avenir_next_n5"
      },
      {
        "type": "checkbox",
        "id": "font_menu_capitalize",
        "label": "Uppercase",
        "default": false
      },
      {
        "type":      "range",
        "id":        "font_menu_spacing",
        "min":       -5,
        "max":       25,
        "step":      1,
        "unit":      "%",
        "label":     "Letter Spacing",
        "default":   0
      },
      {
        "type": "header",
        "content": "Headings"
      },
      {
        "type": "font_picker",
        "label": "Font",
        "id": "font_heading",
        "default": "futura_n5"
      },
      {
        "type": "checkbox",
        "id": "font_heading_capitalize",
        "label": "Uppercase",
        "default": false
      },
      {
        "type":      "range",
        "id":        "font_heading_spacing",
        "min":       -5,
        "max":       25,
        "step":      1,
        "unit":      "%",
        "label":     "Letter Spacing",
        "default":   0
      },
      {
        "type": "header",
        "content": "Captions"
      },
      {
        "type": "font_picker",
        "label": "Font",
        "id": "font_caption",
        "default": "avenir_next_n5"
      },
      {
        "type": "checkbox",
        "id": "font_caption_capitalize",
        "label": "Uppercase",
        "default": true
      },
      {
        "type":      "range",
        "id":        "font_caption_spacing",
        "min":       -5,
        "max":       25,
        "step":      1,
        "unit":      "%",
        "label":     "Letter Spacing",
        "default":   8
      },
      {
        "type": "header",
        "content": "Buttons"
      },
      {
        "type": "font_picker",
        "label": "Font",
        "id": "font_button",
        "default": "futura_n5"
      },
      {
        "type": "checkbox",
        "id": "font_button_capitalize",
        "label": "Uppercase",
        "default": true
      },
      {
        "type":      "range",
        "id":        "font_button_spacing",
        "min":       -5,
        "max":       25,
        "step":      1,
        "unit":      "%",
        "label":     "Letter Spacing",
        "default":   10
      }
    ]
  },
