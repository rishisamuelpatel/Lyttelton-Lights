      "default": false
    },
    {
      "type": "select",
      "id": "search_results_layout",
      "label": "Results layout",
      "options": [
        { "value": "comfortable", "label": "Comfortable"},
        { "value": "cozy", "label": "Cozy"},
        { "value": "compact", "label": "Compact"}
      ],
      "default": "cozy"
    },
    {
      "type": "select",
      "id": "search_results_display",
