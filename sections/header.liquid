    {
      "type": "checkbox",
      "id": "center_logo_mobile",
      "label": "Center mobile logo",
      "default": true
    },
    {
      "id": "logo_max_width_mobile",
      "type": "range",
      "label": "Mobile Logo image width",
      "min": 50,
      "max": 250,
      "step": 5,
      "unit": "px",
      "default": 200
    },
    {
      "type": "header",
      "content": "Cart"
    },
    {
      "type": "select",
      "id": "cart_icon",
      "label": "Icon",
