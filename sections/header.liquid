      "default": "products_pages_posts"
    },
    {
      "type": "link_list",
      "id": "search_quick_links",
      "label": "Quick links",
      "info": "This menu does not support drop-down or mega navigation."
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Mega nav",
      "limit": 4,
      "settings": [
