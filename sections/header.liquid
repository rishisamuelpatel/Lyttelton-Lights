      "id": "justify_navigation",
      "label": "Justify navigation links",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_border",
      "label": "Show border",
      "default": true
    },
    {
      "type": "header",
      "content": "Logo"
    },
    {
